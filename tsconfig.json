{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "./src/**/*",
    "./demo/**/*",
    "./test/**/*",
    "./shim.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
